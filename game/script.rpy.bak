#Usefull Keyword

#with dissolve
#with fade -> black screen fading
#with None -> Show Something instantly -> use to nuance with fade and dissolve

#GUI

#define gui.textbox_height = 220

#Background

#image bg ph = "background/Place_holder_bg2.jpg"
#image bg ph = "background/placeholder_bg.png"
image bg ph = "background/tree.jpg"

image obj phone = "other/phone.png"

image human = "character/humain_neutre.png"
image monster = "character/monstre_neutre.png"
image alien = "character/alien_neutre.png"

#Character
define player = Character("[playername]", color="#ff69b4")

define Narrator = Character(what_italic=True)
define Human = Character("Human", color="#0000ff")#, who_font="font/Gaegu-Regular.ttf")
define Monster = Character("Cthulhu", color="#bf5fff")
define Alien = Character("Alien", color="#009900")

# The game starts here.

label start:

    #gui

    #$ max_love = 100
    #$ curr_love = 0

    #$ ui.vbar(max_love, curr_love)

    #background
    scene bg ph

    # These display lines of dialogue.
    Narrator "{alpha=-0.3}Wilkommen.{/alpha}"

    # Get Player Name
    $ playername = renpy.input("What's your name, friendly entity ?", "Dr. Love")
    $ playername = playername.strip()

    if not playername:
        $ playername = "Dr. Love"


    # Begin VN
    jump main

label main:

    show alien at right
    with dissolve

    Alien "Hi [playername], I'm Alien !"

    show human at left
    with dissolve

    Human "Hi [playername], I'm Human !"

    show monster
    with dissolve

    Monster "Hi [playername], I'm Cthulhu !"

    "All of them" "Hey Listen !"

    call phone_appear

    menu:

        "All of them" "How's it goin' ?"

        "Fine !":
            scene bg ph
            with fade
            jump niceguy


        "Leave me Alone !":
            scene bg ph
            with fade
            jump foreveralone


label niceguy:

    player "They seem to be nice :3"

    return

label foreveralone:

    player "How boring ..."

    return

label phone_appear:

    show obj phone:
        xalign 0.5
        yalign 0.0
    with dissolve

    return
